<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:gravity="center"
	android:background="@drawable/about_bg"
	android:tint="#7F000000">

	<LinearLayout
		android:layout_height="100dp"
		android:layout_width="100dp"
		android:orientation="vertical"
		android:background="@drawable/devsan_logo"
		android:layout_marginTop="10dp"/>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:text="ᴛʀᴀɴsғᴏʀᴍɪɴɢ ɪᴅᴇᴀs ɪɴᴛᴏ ᴄᴏᴅᴇ ʟɪɴᴇs"
		android:textColor="#000000"/>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:padding="10dp"
		android:text="Developed and Designed By"
		android:typeface="sans"
		android:textColor="#000000"
		android:textStyle="bold"
		android:layout_margin="15dp"/>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:text="DevSan"
		android:textIsSelectable="true"
		android:typeface="serif"
		android:textStyle="bold"
		android:textSize="35sp"
		android:textColor="#000000"
		android:layout_marginTop="20dp"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_margin="5dp">

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:text="Contact/Feedback :-"
			android:typeface="serif"
			android:textColor="#000000"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:text="DevSan"
			android:typeface="monospace"
			android:layout_marginLeft="3dp"
			android:clickable="true"
			android:onClick="sendfeed_email"
			android:textStyle="bold"
			android:textSize="25sp"
			android:padding="10dp"
			android:textColor="#000000"
			android:shadowColor="#0096FF"
			android:singleLine="true"/>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:text="You Have Some Great App iDeas in Your Mind and Want to Convert It into an App. Contact Me,I Will Help You To Transform Your iDeas Into Reality."
		android:typeface="monospace"
		android:textColor="#000000"
		android:gravity="center"
		android:padding="8dp"
		android:layout_marginTop="5dp"
		android:background="@drawable/tv_border"
		android:layout_margin="3dp"/>

</LinearLayout>

